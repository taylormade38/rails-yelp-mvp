<div class="container">
  <h1>Write a Review For <%= @restaurant.name %></h1>
  <%= simple_form_for [ @restaurant, @review ] do |f| %>
  <%= f.input :rating %>
  <%= f.input :content %>
  <%= f.submit "Submit review 🤗🤘🏽📩", class: "btn btn-secondary" %>
  <% end %>
  <%= link_to "Nevermind, go 🔙 to #{@restaurant.name}", restaurant_path(@restaurant)  %>
</div>

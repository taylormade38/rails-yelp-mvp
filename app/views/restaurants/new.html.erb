<div class="container">
  <h1>Add a Restaurant</h1>
  <%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name %>
  <%= f.input :category %>
  <%= f.input :phone_number %>
  <%= f.input :address %>
  <%= f.submit "Finish! 👌🏽", class: "btn btn-outline-secondary" %>
  <% end %>
  <%= link_to "Just Kidding, Go 🔙 to All Restaurants", restaurants_path %>
</div>

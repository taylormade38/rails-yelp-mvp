<div class="container">
  <h1>Restaurants 🥢</h1>
  <hr>
  <ul>
  <% @restaurants.each do |restaurant| %>
  <li><%= link_to restaurant.name, restaurant_path(restaurant) %> / <%= restaurant.category %> / <%= restaurant.address %></li>
  <% end %>

  <%= link_to "➕ Add a Restaurant", new_restaurant_path, class: "btn btn-outline-success" %>
</ul>

</div>
